<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dndChar.Api</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css"/>
    
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a asp-page="/Index" class="navbar-brand">JD&D.CharacterSheets</a>
            </li>
            <li class="nav-item">
                <a class="dropdown-item" asp-page="/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="dropdown-item" asp-page="/About">About</a>
            </li>
            <li class="nav-item">
                <a class="dropdown-item" asp-page="/Contact">Contact</a>
            </li>
        </ul>
    </div>
</nav>

<partial name="_CookieConsentPartial"/>

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer class="page-footer font-small blue pt-4">
        <div class="footer-copyright text-center py-3">
            <p>&copy; 2018 - dndChar.Api</p>
        </div>
    </footer>
</div>

<environment include="Development">
    <script src="~/lib/bootstrap/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
</environment>

@RenderSection("Scripts", required: false)
</body>
</html>
